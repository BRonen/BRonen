<style>
  nav {
    width: 45%;
    display: flex;
    justify-content: end;
    margin-bottom: -2rem;
  }
  nav input[type="search"] {
    outline: none;
    border: none;
    border-radius: 0.6rem;
    padding: 0.70rem 1rem;
    font-size: 1.2rem;
    box-shadow: 0px 0.2rem 0.5rem 0.1rem rgba(0, 0, 0, 0.1) inset;
  }
  main {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
  }
  @media (min-width: 767px) {
    main {
      flex-wrap: nowrap;
      gap: 1.5rem;
      padding-top: 14vh;
    }
  }
  a {
    min-width: 45%;
    text-decoration: none;
    color: #222;
  }
  section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem 2rem;
    border-radius: 0.6rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
    transition: all 150ms ease-in-out;
  }
  section:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2),
      0 2px 4px -2px rgba(0, 0, 0, 0.15);
  }
  section > * {
  }
  section h1 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  section p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }
  h2 {
    width: 45%;
    margin: 0;
    margin-top: 3rem;
  }
</style>
